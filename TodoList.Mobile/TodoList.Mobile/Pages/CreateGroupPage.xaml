<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoList.Mobile.Pages.CreateGroupPage"
             Title="CreateGroupPage">
    <VerticalStackLayout Margin="20">
        <Entry Margin="0,10,0,0" Text="{Binding Path=Group.GroupName}" Placeholder="Enter group name"></Entry>
        <Button Margin="0,10,0,0" Text="Save" Clicked="OnSaveButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>